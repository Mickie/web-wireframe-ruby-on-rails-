<%= provide(:title, @tailgate.name + "- FANZO") %>

<div id="tailgate_show">
  <div class="row-fluid">
    <div class="span12 banner">
      <div class="join_fanzone">
        <a href="#">Join</a>
      </div>
      <div class="banner_content">
        <div class="team_logo">
          <%= teamLogo(@tailgate.team, :large) %>      
        </div>
        <h1><%= @tailgate.name %></h1>
        <p class="owner"><span class="fan_count">74 FANS</span> : Created by <%= @tailgate.user.full_name %> : Updated on June 22, 2012</p>
        <% if @current_user == @tailgate.user %>
          <p>Hey! This is your tailgate, so you can <%= link_to "edit", edit_tailgate_path(@tailgate)%> it!</p>
        <% end %>
      </div>
    </div>
  </div>
  
  <div class="row-fluid">
    <div class="span12">
      <%= render partial:'partials/media_slider' %>
    </div>
  </div>
  
  <div class="row-fluid">
    
    <div class="span8 fanzonePosts">
      <div id="postForm">
        <h4>Fanzone Posts</h4>
        <%= render "/posts/form"%>
      </div>
      <div id="posts">
        <% @tailgate.posts.each do | aPost | %>
          <div class="post">
            <div class="profile_pic">
              <% if aPost.user.image %>
                <%= image_tag( aPost.user.image ) %>
              <% end %>
            </div>
            
            <p><%= aPost.content %></p>
            <% aPost.comments.each do |aComment| %>
              <p class="comment"><strong><%= aComment.user.full_name %>:</strong> <%= aComment.content %></p>
            <% end %>
            <%= render "/comments/form", post:aPost, comment:aPost.comments.new %>
          </div>
        <% end %>
      </div>
    </div>
    
    <div class="span4 twitterStream">
      <h4>Social Streams</h4>
      <div class="controls" id="tweetControls">
        <div class="input-append">
          <textarea rows="1"><%= raw @tailgate.team.social_info.hash_tags %></textarea>
          <div class="btn-group">
            <button href="#" class="btn btn-primary quickTweetButton">Update Social Status</button>
            <button class="btn dropdown-toggle btn-primary" data-toggle="dropdown">
              <span class="caret"></span>
            </button>
            <ul class="dropdown-menu">
              <li><strong>Booyah!!</strong></li>
              <div class="happy">
                <li><a href="#"></a></li>
              </div>
              <li class="divider"></li>
              <li><strong>What!?!?</strong></li>
              <div class="sad">
                <li><a href="#"></a></li>
              </div>
            </ul>         
          </div>
        </div>
      </div>    
      <div id="myTweetModal" class="modal hide fade" style="display: none;">
        <div class="modal-header">
          <a class="close" data-dismiss="modal">×</a>
          <h3>Personalize your tweet:</h3>
        </div>
        <div class="modal-body">
          <textarea class="input-xlarge" id="tweetText" rows="3"></textarea>
        </div>
        <div class="modal-footer">
          <a id="sendTweetButton" href="#" class="btn" data-dismiss="modal">Send</a>
        </div>
      </div>
          
      <div id="tweetSuccessAlert" class='alert alert-info fade in' style='display:none'>
        <a class='close' data-dismiss='alert' href='#'>×</a>
        <div class="messageHolder"></div>
      </div>
          
      <div id="tweetHolder">
        <div id="newTweets" class='alert alert-info fade in' style='display:none'>
          <a class='close' data-dismiss='alert' href='#'>×</a>
          <p>
            <strong>5</strong> new Tweets!
          </p>
        </div>
        <div id="tweets">
          <div id="template" class="tweet well">
            <img class="twitterAvatar" width="48px" height="48px">
            <span class="twitterName"></span>: 
            <span class="twitterText"></span>
            <div class="tweetMenu">
              <div class="timestamp"></div>
              <a id="reply"><%= image_tag("reply.png") %>Reply</a> |
              <a id="retweet"><%= image_tag("retweet.png") %>Retweet</a> |
              <a id="favorite"><%= image_tag("favorite.png") %>Favorite</a>
            </div>
            <div class="alert alert-info fade in" style="display:none">
              <a class="close" data-dismiss="alert" href="#">x</a>
              <p><strong>Success!</strong></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


<script language="JavaScript">
  var myTwitterView;
  var myFacebookView;
  var myTailgateMediaSlider;
  
  $(function()
  {
    myFacebookView = new FacebookView();
    myTwitterView = TwitterView.create( <%= raw @tailgate.team.social_info.hash_tags.split(" ") %>,
                                        <%= raw @tailgate.team.social_info.not_tags.split(" ") %>,
                                        20,
                                        "tweets",
                                        "newTweets",
                                        "tweetControls",
                                        <%= @current_user && @current_user.isConnectedToTwitter? %>,
                                        <%= @current_user ? @current_user.id : 0 %>,
                                        <%= @tailgate.team.sport.id %>,
                                        "myTwitterView");
    myTwitterView.startLoadingTweets();

    myTailgateMediaSlider = MediaSlider.create( "div#tailgate_show div#myMediaSlider", 
                                                "div#tailgate_show div#myVideoModal",
                                                "div#tailgate_show div#myInstagramModal");
    myTailgateMediaSlider.createSliderForTeam(<%= @tailgate.team.id %>,
                                              "<%= @tailgate.team.short_name %>",
                                              "<%= @tailgate.team.sport.name %>", 
                                              <%= raw @tailgate.team.social_info.hash_tags.split(" ") %> );

   });
</script>