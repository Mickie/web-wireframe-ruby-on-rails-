<%= provide(:title, @tailgate.name + " - Fanzo") %>

<% provide :head_open_graph do %>
  <%= raw "prefix=\"og: http://ogp.me/ns# fb: http://ogp.me/ns/fb# #{ENV["FANZO_FACEBOOK_NAMESPACE"]}: http://ogp.me/ns/fb/#{ENV["FANZO_FACEBOOK_NAMESPACE"]}#\"" %>
<% end %>

<% provide :opengraph_meta_tags do %>
  <meta property="fb:app_id" content="<%= ENV["FANZO_FACEBOOK_APP_ID"] -%>" /> 
  <meta property="og:type"   content="<%= ENV["FANZO_FACEBOOK_NAMESPACE"] -%>:fanzone" /> 
  <meta property="og:url"    content="<%= tailgate_url(@tailgate) -%>" /> 
  <meta property="og:title"  content="<%= @tailgate.name -%>" /> 
  <meta property="og:description"  content="<%= @tailgate.description ? @tailgate.description : "A fanzone about the #{@tailgate.team.name} #{@tailgate.team.sport.name} Team."%>" /> 
  <meta property="og:image"  content="<%= getLargeLogoBitly(@tailgate.team) -%>" />
  <meta property="fb:admins" content="690891536" />     
  <link href="<%= tailgate_url(@tailgate) -%>" rel="canonical">
<% end %>

<%= render partial: "partials/tailgate"%>
