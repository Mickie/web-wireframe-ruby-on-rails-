UserManager.get().followTailgate(<%= raw @tailgate_follower.to_json(include: [ :tailgate ]) %>);

if (typeof myNavigator !== 'undefined')
{
  $("#myFanzones .count").html("<p><%= current_user.tailgates.size + current_user.followed_tailgates.size -%></p>");
  $("#fanzone_nav ul").append("<%= escape_javascript(render partial:'partials/left_nav_tailgate', locals: { aTailgate: @tailgate_follower.tailgate }) %>");
  $("#fanzone_nav #nav_<%= @tailgate_follower.tailgate.slug -%>").addClass('active');
  $("#tailgate_<%= @tailgate_follower.tailgate.slug -%> .fanzoneState").html("<div class='myFanzone' style='border-bottom-color: <%= @tailgate_follower.tailgate.light_color %>;'></div>");
  $("#tailgate_<%= @tailgate_follower.tailgate.slug -%> .fan_count").html("<%= pluralize(@tailgate_follower.tailgate.tailgate_followers_count + 1, "Fan") -%>");
}
else
{
  myPhoneNavigator.myFanzoneView.renderFollowButton();
}
