<div class="post" id="<%= aPost.id %>">
  <div class="profile_pic">
    <% if aPost.user.image %>
      <%= image_tag( aPost.user.image ) %>
    <% end %>
  </div>
  
  <p><%= aPost.content %></p>
  <% aPost.comments.each do |aComment| %>
    <p class="comment"><strong><%= aComment.user.full_name %>:</strong> <%= aComment.content %></p>
  <% end %>
  <%= render "/comments/form", post:aPost, comment:aPost.comments.build %>
</div>
