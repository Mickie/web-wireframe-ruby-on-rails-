<div id="modals">
  <% if user_signed_in? %>
    <%= render partial: "partials/dialogs/create_fanzone_modal", locals: { aTailgate: current_user.tailgates.build } %>
    <%= render partial: "partials/dialogs/connect_twitter_modal" %>
  <% else %>
    <%= render partial: "partials/dialogs/login_modal" %>
  <% end %>
</div>

<div id="left_nav">
  <nav id="fanzo_navigation">
    <div id="account">
      <div id="account_content">
        <% if user_signed_in? %>
          <div class="dropdown" id="account_dropdown">
            <a class="users_name" href="#account_dropdown" data-toggle="dropdown">
              <div class="profile_pic">
                <% if current_user.image %>
                  <%= image_tag( current_user.image, size:"32x32", alt:"#{current_user.full_name}") %>
                <% end %>
              </div>
              <div class="name"><%= current_user.first_name -%></div>
              <div class="drop_arrow"></div>
            </a>
            <ul class="dropdown-menu">
              <% if false %>
                <li><%= link_to "Profile", current_user %></li>
              <% end %>
              <li><%= link_to "Settings", user_settings_edit_path %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Sign out", destroy_user_session_path, method: "delete" %>
              </li>
            </ul>
          </div>
        <% else %>
          <div class="login">
            <a class="users_name" href="#myLoginModal" data-toggle="modal">
              <div class="profile_pic">
                <%= image_tag( "fanzo-logo-square.gif", size:"32x32", alt:"Fanzo.me") %>
              </div>
              <div class="name">Log in</div>
            </a>
          </div>
        <% end %>
      </div>
    </div>
    
    <div id="fanzone_nav">
      <ul class="nav nav-tabs nav-stacked">
        <li id="logo">
          <a href="/">
            <div>
              <%= image_tag "fanzo-logo.png", size:"200x50", alt:"Fanzo.me" %>
              <p class="tagline">where fans rule</p>
            </div>
          </a>
        </li>

        <li id="fanzone_search">
          <%= form_tag("/tailgates/search", :method => "get", remote: 'true',  class: "form-search") do %>
            <%= hidden_field_tag :team_id %>
            <%= autocomplete_field_tag 'team', 
                                        '', 
                                        autocomplete_team_name_teams_path, 
                                        id_element: '#team_id',
                                        placeholder: 'Search for your team' %>
          <% end %>
          <i class="icon-search"></i>
        </li>
        
        <li id="allFanzones">
          <a onclick="loadData('<%= tailgates_path(noLayout:true ) %>', '#allFanzones')" href="#allFanzones">
            <table>
              <tr>
                <td class="team_logo"><i></i></td>
                <td class="fanzone_name">
                  <p>All Fanzones</p>
                </td>
                <td class="count">
                  <p><%= Tailgate.count -%></p>
                </td>
              </tr>
            </table>
          </a>
        </li>
        
        <li id="myFanzones">
          <%if user_signed_in? %>
            <a onclick="loadData('<%= tailgates_path(filter:"user", noLayout:true ) %>', '#myFanzones')" href="#myFanzones">
          <% else %>
            <a href="#myLoginModal" data-toggle="modal">
          <% end %>
            <table>
              <tr>
                <td class="team_logo"><i></i></td>
                <td class="fanzone_name">
                  <p>My Fanzones</p>
                </td>
                <td class="count">
                  <p>
                    <% if user_signed_in? %>
                      <%= current_user.tailgates.size + current_user.followed_tailgates.size -%>
                    <% end %>
                  </p>
                </td>
              </tr>
            </table>
          </a>
        </li>
    
        <% if user_signed_in? %>
          <% current_user.myFanzones[0..5].each do | aTailgate |%>
            <%= render partial: "partials/left_nav_tailgate", locals: { aTailgate: aTailgate } unless aTailgate.new_record? %>
          <% end %>
        <% end %>
    
        <li id="createFanzone">
          <% if user_signed_in? %>
            <a href="#myCreateFanzoneModal" data-toggle="modal">
          <% else %>
            <a href="#myLoginModal" data-toggle="modal">
          <% end %>
              <span class="fanzoButton">+ &nbsp; Create a Fanzone</span>
            </a>
        </li>  

      </ul>
    </div>
  </nav>
  <%= render 'partials/footer' %>
</div>
