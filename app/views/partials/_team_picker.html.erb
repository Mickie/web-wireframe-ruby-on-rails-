<%= label_tag(:sport_id, "Pick a sport:") %>
<%= select_tag(:sport_id, options_for_select(Sport.all.collect {|p| [ p.name, p.id ] } ), {id:"sport_picker"}) %>

<%= form_for(@user_team, url: user_user_teams_path(@user, @user_team) ) do |f| %>
  <div class="field">
    <%= f.label :team_id %><br />
    <%= f.select(:team_id, options_for_select(Team.all.collect {|p| [ p.name, p.id ] } )) %>
  </div>
  <%= submit_tag("Done", id:"commit") %>
<% end %>
