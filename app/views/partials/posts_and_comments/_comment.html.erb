<div class="comment" id="post_<%= aComment.post.id %>_comment_<%= aComment.id -%>">
  <div class="comment_votes">
    <div class="vote_up">
      <% if aCommentVote && aCommentVote.up_vote %>
        <i class="icon-thumbs-up icon-white disabled"></i>
      <% else %>
        <%= render partial: "partials/buttons/comment_up_vote", locals: { aComment: aComment } %>
      <% end %>      
    </div>
    <div class="fan_score"><%= aComment.fan_score %></div>
    <div class="vote_down">
      <%= render partial: "partials/buttons/comment_down_vote", locals: { aComment: aComment } %>
    </div>
  </div>

  <div class="profile_pic">
    <% if aComment.user.image %>
      <%= link_to image_tag( aComment.user.image, size:"32x32" ), user_path(aComment.user) %>
    <% end %>
  </div>
  
  <div class="comment_content">
    <div>
      <span class="user_name"><%= aComment.user.full_name %> - </span>
      <span class="timestamp" title="<%= aComment.created_at.getutc.iso8601 -%>" ><%= aComment.created_at.to_s %></span>
    </div>
    <p><%= raw handleNewlinesAndUrls(aComment.content) %></p>
  </div>
</div>
