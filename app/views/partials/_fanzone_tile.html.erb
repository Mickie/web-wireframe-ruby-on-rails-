<div class="span4 fanzoneTile" id="tailgate_<%= aTailgate.slug %>">
  <div class="banner" 
       onclick="loadData('<%= tailgate_path(aTailgate, noLayout:true ) %>', '#nav_<%= aTailgate.slug -%>')"
       style="background-color:<%= aTailgate.color %>" >
    <div class="join_fanzone">
      <div class="fanzoneState">
        <% if user_signed_in? %>
          <% if current_user.mine_or_following?( aTailgate ) %>
            <div class="myFanzone" style="border-bottom-color: <%= aTailgate.light_color %>;"></div>
          <% else %>
            <%= render partial: "partials/follow_button", locals: { tailgate: aTailgate } %>
          <% end %>
        <% else %>
          <a href="#myLoginModal" data-toggle="modal" class="follow_button fanzoButton">Follow</a>
        <% end %>
      </div>
    </div>
    <% if aTailgate.official %>
      <div class="official">
        <span>Official</span>
      </div>
    <% end %>
    <div class="banner_content">
      <table>
        <tr>
          <td class="team_logo">
            <%= teamLogo(aTailgate.team, :small) %>      
          </td>
          <td class="fanzone_name">
            <h3><%= aTailgate.name %></h3>
          </td>
        </tr>
      </table>
    </div>
  </div>
  <div class="content">
    <div class="posts">
      <% if aTailgate.posts.visible.any? %>
        <% for i in 0..1 do %>
          <% if i < aTailgate.posts.visible.length %>
            <% thePost = aTailgate.posts.visible[i] %>
            <div class="post">
              <div class="profile_pic">
                <% if thePost.user.image %>
                  <%= image_tag( thePost.user.image, size:"32x32") %>
                <% end %>
              </div>
              <div class="post_content">
                <strong><%= thePost.user.full_name %></strong> <span><%= raw handleNewlinesAndUrls(thePost.content) %></span>
              </div>
            </div>
          <% end %>
        <% end %>
      <% else %>
        <div class="post"><div class="post_content">No New Posts... </div></div>
      <% end %>
    </div>
    <div class="stats">
      <span class="numFollowers">
        <%= pluralize(aTailgate.followers.size + 1, "fan") %>
      </span>
      <span class="lastUpdateDate">
        <% if aTailgate.posts.any? %>
          Updated <%= time_ago_in_words(aTailgate.posts[0].created_at) %> ago
        <% end %>
      </span>
    </div>
  </div>
</div>
