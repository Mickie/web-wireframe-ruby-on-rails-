<h1>Listing venues</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Venue type</th>
    <th>Location</th>
    <th>Twitter</th>
    <th>Facebook</th>
    <th>Web</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @venues.each do |venue| %>
  <tr>
    <td><%= venue.name %></td>
    <td><%= venue.venue_type.name %></td>
    <td><%= venue.location.one_line_address %></td>
    <td><%= venue.social_info.twitter_name %></td>
    <td><%= venue.social_info.facebook_page_url %></td>
    <td><%= venue.social_info.web_url %></td>
    <td><%= link_to 'Show', venue %></td>
    <td><%= link_to 'Edit', edit_venue_path(venue) %></td>
    <td><%= link_to 'Destroy', venue, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

