<h1>Listing events</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Home team</th>
    <th>Visiting team</th>
    <th>Event date</th>
    <th>Event time</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @events.each do |event| %>
  <tr>
    <td><%= event.name %></td>
    <td><%= event.home_team.name %></td>
    <td><%= event.visiting_team.name %></td>
    <td><%= event.event_date %></td>
    <td><%= event.event_time ? event.event_time : "TBA" %></td>
    <td><%= link_to 'Show', event %></td>
    <td><%= link_to 'Edit', edit_event_path(event) %></td>
    <td><%= link_to 'Destroy', event, data: { confirm: "Are you sure?" }, method: :delete %></td>
  </tr>
<% end %>
</table>

