<div class="row-fluid">
  <div class="span12">
    <h1><%= @event.visiting_team.name %> at <%= @event.home_team.name %></h1>
  </div>
</div>
<div class="row-fluid">
  <div class="span6">
    <% if @event.visiting_team.slug && @event.home_team.slug %>
      <%= teamLogo(@event.visiting_team, :medium) %>
    <% end %>
    <h2><%= link_to @event.visiting_team.name, team_path(@event.visiting_team) %></h2>
  </div>
  <div class="span6">
    <% if @event.visiting_team.slug && @event.home_team.slug %>
      <%= teamLogo(@event.home_team, :medium) %>
    <% end %>
    <h2><%= link_to @event.home_team.name, team_path(@event.home_team) %></h2>
  </div>
</div>

<div class="row-fluid">
  <div class="span6">
    <h3>Game Watch Sites:</h3>
    <% @event.game_watches.each do |aGameWatch| %>
      <div class="row-fluid">
        <div class="span12">
          <%= aGameWatch.name ? aGameWatch.name : aGameWatch.venue.name %> : <%= aGameWatch.venue.location.one_line_address %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="span6">
    <h3>Game Details:</h3>
    <div class="row-fluid">
      <div class="span12">
        <div class="row-fluid">
          <div class="span6">
            <strong>Date:</strong>
            <%= @event.event_date.to_formatted_s(:long_ordinal) %>
          </div>
          <div class="span6">
            <strong>Time:</strong>
            <%= @event.event_time? ? @event.event_time.to_formatted_s(:time) : "TBA" %>
          </div>
        </div>
      </div>
    </div>
    <%if @event.location %>
      <div class="row-fluid">
        <div class="span12">
          <strong>Location</strong>>
          <%= @event.location.one_line_address %>
        </div>
      </div>
    <%end%>
  </div>
</div>

<div class="row-fluid">
  <div class="span12">
    <h3>Official Local Watch Sites:</h3>
  </div>
</div>
<div class="row-fluid">
  <div class="span6">
    <h4><%= @event.visiting_team.name %> Watch Sites:</h4>
    <% @localVisitingTeamWatchSites.each do |aWatchSite| %>
      <div class="row-fluid">
        <div class="span12">
          <%= aWatchSite.name && aWatchSite.name.length > 0 ? aWatchSite.name : aWatchSite.venue.name %> : <%= aWatchSite.venue.location.one_line_address %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="span6">
    <h4><%= @event.home_team.name %> Watch Sites:</h4>
    <% @localHomeTeamWatchSites.each do |aWatchSite| %>
      <div class="row-fluid">
        <div class="span12">
          <%= aWatchSite.name && aWatchSite.name.length > 0 ? aWatchSite.name : aWatchSite.venue.name %> : <%= aWatchSite.venue.location.one_line_address %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="row-fluid">
  <div class="span12">
    <h3>What people are saying about the game:</h3>
  </div>
</div>
<div class="row-fluid">
  <div class="span12">
    <div id="buttonHolder">
      <div id="myHappyModal" class="modal hide fade" style="display: none;">
        <div class="modal-header">
          <a class="close" data-dismiss="modal">×</a>
          <h3>Tell the world that Rocked!<br/>Pick a start:</h3>
        </div>
        <div class="modal-body">
          <a id="dunk" class="btn btn-large" href="#">Monster Dunk!</a>
          <a id="niceShot" class="btn btn-large" href="#">Swoosh!</a>
          <a id="stickIt" class="btn btn-large" href="#">In your face!</a>
          <a id="goDefense" class="btn btn-large" href="#">Defense!</a>
          <a id="goOffense" class="btn btn-large" href="#">Offense!</a>
          <a id="pretty" class="btn btn-large" href="#">So Pretty!</a>
        </div>
        <div class="modal-footer">
          <a href="#" class="btn" data-dismiss="modal">Cancel</a>
        </div>
      </div>

      <div id="mySadModal" class="modal hide fade" style="display: none;">
        <div class="modal-header">
          <a class="close" data-dismiss="modal">×</a>
          <h3>Tell the world that Sucked!<br/>Pick a start:</h3>
        </div>
        <div class="modal-body">
          <a id="noDefense" class="btn btn-large" href="#">What Defense?</a>
          <a id="foul" class="btn btn-large" href="#">Foul!</a>
          <a id="kiddingMe" class="btn btn-large" href="#">You kidding?</a>
          <a id="ouch" class="btn btn-large" href="#">Ouch!</a>
          <a id="noOffense" class="btn btn-large" href="#">What Offense?</a>
          <a id="blindRef" class="btn btn-large" href="#">Ref's Blind!</a>
        </div>
        <div class="modal-footer">
          <a href="#" class="btn" data-dismiss="modal">Cancel</a>
        </div>
      </div>
      
      <div id="myTweetModal" class="modal hide fade" style="display: none;">
        <div class="modal-header">
          <a class="close" data-dismiss="modal">×</a>
          <h3>Personalize your tweet:</h3>
        </div>
        <div class="modal-body">
          <textarea class="input-xlarge" id="tweetText" rows="3"></textarea>
        </div>
        <div class="modal-footer">
          <a id="sendTweetButton" href="#" class="btn" data-dismiss="modal">Send</a>
        </div>
      </div>
          
      <div class="tweetStarterBtn">
        <a data-toggle="modal" href="#myHappyModal" id="happyButton" class="btn btn-large btn-primary">Booyah!!!</a>
      </div>
      <div class="tweetStarterBtn">
        <a data-toggle="modal" href="#mySadModal" id="sadButton" class="btn btn-large btn-danger">What?!?!</a>
      </div>
    </div>
    <div id="tweetSuccessAlert" class='alert alert-info fade in' style='display:none'>
      <a class='close' data-dismiss='alert' href='#'>×</a><p><strong>Success!</strong> Your status was updated</p>
    </div>    
  </div>
</div>

<div class="row-fluid">
  <div class="span6">
    <div id="tweetHolder">
      <h4><%= @event.visiting_team.name %> tweet stream:</h4>
      <div id="newTweetsVisiting" class='alert alert-info fade in' style='display:none'>
        <a class='close' data-dismiss='alert' href='#'>×</a><p><strong>5</strong> new Tweets!</p>
      </div>
      <div id="tweetsVisiting">
        <div id="template" class="tweet well">
          <img class="twitterAvatar" width="48px" height="48px">
          <span class="twitterName"></span>: 
          <span class="twitterText"></span>
          <div class="tweetMenu">
            <div class="timestamp"></div>
            <a id="reply"><%= image_tag("reply.png") %>Reply</a> |
            <a id="retweet"><%= image_tag("retweet.png") %>Retweet</a> |
            <a id="favorite"><%= image_tag("favorite.png") %>Favorite</a>
          </div>
          <div class="alert alert-info fade in" style="display:none">
            <a class="close" data-dismiss="alert" href="#">x</a>
            <p><strong>Success!</strong></p>
          </div>          
        </div>        
      </div>
    </div>
  </div>
  <div class="span6">
    <div id="tweetHolder">
      <h4><%= @event.home_team.name %> tweet stream:</h4>
      <div id="newTweetsHome" class='alert alert-info fade in' style='display:none'>
        <a class='close' data-dismiss='alert' href='#'>×</a><p><strong>5</strong> new Tweets!</p>
      </div>
      <div id="tweetsHome"></div>
    </div>
  </div>
</div>

<script language="JavaScript">
  $(function()
  {
    var theVisitingTeamTwitterView = new TwitterView( <%= raw @visitingHashTags %>, 
                                                      20, 
                                                      "tweetsVisiting", 
                                                      "newTweetsVisiting",
                                                      <%= current_user.isConnectedToTwitter? %>);
    theVisitingTeamTwitterView.startLoadingTweets();

    var theHomeTeamTwitterView = new TwitterView( <%= raw @homeHashTags %>, 
                                                  20, 
                                                  "tweetsHome", 
                                                  "newTweetsHome",
                                                  <%= current_user.isConnectedToTwitter? %>);
    theHomeTeamTwitterView.startLoadingTweets();
  })
</script>

