<div class="row-fluid">
  <div class="span12">
    <p id="notice"><%= notice %></p>
  </div>
</div>
<div class="row-fluid">
  <div class="span5">
    <% if @event.visiting_team.slug && @event.home_team.slug %>
      <%= teamLogo(@event.visiting_team, :medium) %>
    <% end %>
    <h2><%= link_to @event.visiting_team.name, team_path(@event.visiting_team) %></h2>
  </div>
  <div class="span2">
    <strong>at</strong>
  </div>
  <div class="span5">
    <% if @event.visiting_team.slug && @event.home_team.slug %>
      <%= teamLogo(@event.home_team, :medium) %>
    <% end %>
    <h2><%= link_to @event.home_team.name, team_path(@event.home_team) %></h2>
  </div>
</div>

<div class="row-fluid">
  <div class="span6">
    <h3>Game Watch Sites:</h3>
    <% @event.game_watches.each do |aGameWatch| %>
      <div class="row-fluid">
        <div class="span12">
          <%= aGameWatch.name ? aGameWatch.name : aGameWatch.venue.name %> : <%= aGameWatch.venue.location.one_line_address %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="span6">
    <h3>Game Details:</h3>
    <div class="row-fluid">
      <div class="span12">
          <strong>Game Time:</strong>
        <%= @event.event_date.to_formatted_s(:long_ordinal) %> at
        <%= @event.event_time.to_formatted_s(:time) %>
      </div>
    </div>
    <%if @event.location %>
      <div class="row-fluid">
        <div class="span12">
          <strong>Location</strong>>
          <%= @event.location.one_line_address %>
        </div>
      </div>
    <%end%>
  </div>
</div>


<div class="row-fluid">
  <div class="span12">
    <h3>What people are saying about the game:</h3>
    <div id="tweetHolder">
      <div id="newTweets" class='alert alert-info fade in' style='display:none'>
        <a class='close' data-dismiss='alert' href='#'>×</a><p><strong>5</strong> new Tweets!</p>
      </div>
      <div id="tweets"></div>
    </div>
  </div>
</div>

  
<div class="row-fluid">
  <div class="span6">
    <div id="tweetHolder">
      <h4><%= @event.visiting_team.name %> tweet stream:</h4>
      <div id="newTweetsVisiting" class='alert alert-info fade in' style='display:none'>
        <a class='close' data-dismiss='alert' href='#'>×</a><p><strong>5</strong> new Tweets!</p>
      </div>
      <div id="tweetsVisiting"></div>
    </div>
  </div>
  <div class="span6">
    <div id="tweetHolder">
      <h4><%= @event.home_team.name %> tweet stream:</h4>
      <div id="newTweetsHome" class='alert alert-info fade in' style='display:none'>
        <a class='close' data-dismiss='alert' href='#'>×</a><p><strong>5</strong> new Tweets!</p>
      </div>
      <div id="tweetsHome"></div>
    </div>
  </div>
</div>

<script language="JavaScript">
  $(function()
  {
    var theVisitingTeamTwitterView = new TwitterView(<%= raw @visitingHashTags %>, 20, "tweetsVisiting", "newTweetsVisiting");
    theVisitingTeamTwitterView.startLoadingTweets();

    var theHomeTeamTwitterView = new TwitterView(<%= raw @homeHashTags %>, 20, "tweetsHome", "newTweetsHome");
    theHomeTeamTwitterView.startLoadingTweets();
  })
</script>

