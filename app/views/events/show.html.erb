<%= provide(:title,  @event.visiting_team.name + ' at ' + @event.home_team.name + ' on FANZO') %>


<div class="row-fluid">
  <div class="span12">
    <h1><%= @event.visiting_team.name %> at <%= @event.home_team.name %></h1>
  </div>
</div>
<div class="row-fluid">
  <div class="span6">
    <h2>
      <% if @event.visiting_team.slug && @event.home_team.slug %>
        <%= teamLogo(@event.visiting_team, :medium) %>
      <% end %>
      <%= link_to @event.visiting_team.name, team_path(@event.visiting_team) %>
    </h2>
  </div>
  <div class="span6">
    <h2>
      <% if @event.visiting_team.slug && @event.home_team.slug %>
        <%= teamLogo(@event.home_team, :medium) %>
      <% end %>
      <%= link_to @event.home_team.name, team_path(@event.home_team) %>
    </h2>
  </div>
</div>

<div class="row-fluid">
  <div class="span6">
    <h3>Game Watch Sites:</h3>
    <% @event.game_watches.each do |aGameWatch| %>
      <div class="row-fluid">
        <div class="span12">
          <%= aGameWatch.name ? aGameWatch.name : aGameWatch.venue.name %> : <%= aGameWatch.venue.location.one_line_address %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="span6">
    <h3>Game Details:</h3>
    <div class="row-fluid">
      <div class="span12">
        <div class="row-fluid">
          <div class="span6">
            <strong>Date:</strong>
            <%= @event.event_date.to_formatted_s(:long_ordinal) %>
          </div>
          <div class="span6">
            <strong>Time:</strong>
            <%= @event.event_time? ? @event.event_time.to_formatted_s(:time) : "TBA" %>
          </div>
        </div>
      </div>
    </div>
    <%if @event.location %>
      <div class="row-fluid">
        <div class="span12">
          <strong>Location</strong>>
          <%= @event.location.one_line_address %>
        </div>
      </div>
    <%end%>
  </div>
</div>

<div class="row-fluid">
  <div class="span12">
    <h3>Official Local Watch Sites:</h3>
  </div>
</div>
<div class="row-fluid">
  <div class="span6">
    <h4><%= @event.visiting_team.name %> Watch Sites:</h4>
    <% @localVisitingTeamWatchSites.each do |aWatchSite| %>
      <div class="row-fluid">
        <div class="span12">
          <%= aWatchSite.name && aWatchSite.name.length > 0 ? aWatchSite.name : aWatchSite.venue.name %> : <%= aWatchSite.venue.location.one_line_address %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="span6">
    <h4><%= @event.home_team.name %> Watch Sites:</h4>
    <% @localHomeTeamWatchSites.each do |aWatchSite| %>
      <div class="row-fluid">
        <div class="span12">
          <%= aWatchSite.name && aWatchSite.name.length > 0 ? aWatchSite.name : aWatchSite.venue.name %> : <%= aWatchSite.venue.location.one_line_address %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="row-fluid">
  <div class="span12">
    <h3>What people are saying about the game:</h3>
  </div>
</div>
<div class="row-fluid">
  <div class="span12">
    <div>  
      <%= render partial:"partials/twitter/tweet_modal" %>
    </div>

    <div id="tweetSuccessAlert" class='alert alert-info fade in' style='display:none'>
      <a class='close' data-dismiss='alert' href='#'>×</a><p><strong>Success!</strong> Your status was updated</p>
    </div>    
</div>

<div class="row-fluid">
  <div class="span6">
    <div class="controls" id="visitingTweetControls">
      <div class="input-append">
        <textarea class="input-xlarge span4" rows="1"><%= raw  @visitingHashTags.join(' ') %></textarea>
        <div class="btn-group">
          <button href="#" class="btn btn-primary quickTweetButton">Update Twitter Status</button>
          <button class="btn dropdown-toggle btn-primary" data-toggle="dropdown">
            <span class="caret"></span>
          </button>
          <ul class="dropdown-menu">
            <li><strong>Booyah!!</strong></li>
            <div class="happy">
              <li><a href="#"></a></li>
            </div>
            <li class="divider"></li>
            <li><strong>What!?!?</strong></li>
            <div class="sad">
              <li><a href="#"></a></li>
            </div>
          </ul>         
        </div>
      </div>
    </div>    
    
    <div id="tweetHolder">
      <h4><%= @event.visiting_team.name %> tweet stream:</h4>
      <div id="newTweetsVisiting" class='alert alert-info fade in' style='display:none'>
        <a class='close' data-dismiss='alert' href='#'>×</a><p><strong>5</strong> new Tweets!</p>
      </div>
      <div id="tweetsVisiting">
        <%= render partial: "/partials/twitter/tweet_template" %>
      </div>
    </div>
  </div>
  <div class="span6">
    <div class="controls" id="homeTweetControls">
      <div class="input-append">
        <textarea class="input-xlarge span4" rows="1"><%= raw @homeHashTags.join(' ') %></textarea>
        <div class="btn-group">
          <button href="#" class="btn btn-primary quickTweetButton">Update Twitter Status</button>
          <button class="btn dropdown-toggle btn-primary" data-toggle="dropdown">
            <span class="caret"></span>
          </button>
          <ul class="dropdown-menu">
            <li><strong>Booyah!!</strong></li>
            <div class="happy">
              <li><a href="#"></a></li>
            </div>
            <li class="divider"></li>
            <li><strong>What!?!?</strong></li>
            <div class="sad">
              <li><a href="#"></a></li>
            </div>
          </ul>         
        </div>
      </div>
    </div>    

    <div id="tweetHolder">
      <h4><%= @event.home_team.name %> tweet stream:</h4>
      <div id="newTweetsHome" class='alert alert-info fade in' style='display:none'>
        <a class='close' data-dismiss='alert' href='#'>×</a><p><strong>5</strong> new Tweets!</p>
      </div>
      <div id="tweetsHome"></div>
    </div>
  </div>
</div>

<script language="JavaScript">
  var myVisitingTeamTwitterView;
  var myHomeTeamTwitterView;
  $(function()
  {
    myVisitingTeamTwitterView = new TwitterView( <%= raw @visitingHashTags %>,
                                                 <%= raw @event.visiting_team.social_info ? @event.visiting_team.social_info.not_tags.split(" ") : [] %>, 
                                                 20, 
                                                 "tweetsVisiting", 
                                                 "newTweetsVisiting",
                                                 "visitingTweetControls",
                                                  <%= user_signed_in? && current_user.isConnectedToTwitter? %>,
                                                  <%= user_signed_in? ? current_user.id : 0 %>,
                                                 <%= @event.visiting_team.sport.id %>,
                                                 "myVisitingTeamTwitterView");
    myVisitingTeamTwitterView.startLoadingTweets();

    myHomeTeamTwitterView = new TwitterView(  <%= raw @homeHashTags %>, 
                                              <%= raw @event.home_team.social_info ? @event.home_team.social_info.not_tags.split(" ") : [] %>, 
                                              20, 
                                              "tweetsHome", 
                                              "newTweetsHome",
                                              "homeTweetControls",
                                              <%= user_signed_in? && current_user.isConnectedToTwitter? %>,
                                              <%= user_signed_in? ? current_user.id : 0 %>,
                                              <%= @event.home_team.sport.id %>,
                                              "myHomeTeamTwitterView");
    myHomeTeamTwitterView.startLoadingTweets();
  })
</script>

