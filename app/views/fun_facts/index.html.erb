<h1>Listing Fun Facts</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Content</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @fun_facts.each do |fun_fact| %>
  <tr>
    <td><%= fun_fact.name %></td>
    <td><%= fun_fact.content %></td>
    <td><%= link_to 'Show', fun_fact %></td>
    <td><%= link_to 'Edit', edit_fun_fact_path(fun_fact) %></td>
    <td><%= link_to 'Destroy', fun_fact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

