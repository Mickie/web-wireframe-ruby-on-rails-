<h1>Listing posts</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Content</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.title %></td>
    <td><%= post.content %></td>
    <td><%= link_to 'Show', tailgate_post_path(@tailgate, post) %></td>
    <td><%= link_to 'Edit', edit_tailgate_post_path(@tailgate, post) %></td>
    <td><%= link_to 'Destroy', tailgate_post_path(@tailgate, post), confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Post', new_tailgate_post_path(@tailgate) %>
