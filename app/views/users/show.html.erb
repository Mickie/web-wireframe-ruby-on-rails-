<%= provide(:title, "My Profile" ) %>

<div id="userShow">
  <div class="row-fluid">
    <div class="span12">
      <h1>The Parking Lot</h1>
    </div>
  </div>
  
  <div class="row-fluid">
    <div class="span12">
      <h2><%= link_to "Start Your Own Tailgate >>", new_tailgate_path, class: "btn btn-large btn-primary" %></h2>
    </div>
  </div>
  
  <div class="row-fluid">
    <div class="span12">
      <div id="myAddTeamModal" class="modal hide fade" style="display: none;">
        <div class="modal-header">
          <a class="close" data-dismiss="modal">Ã—</a>
          <h3>Add a team:</h3>
        </div>
        <%= render :partial => 'partials/team_picker' %>
      </div>
    </div>
  </div>
  
  
  <div class="row-fluid">
    <div class="span4">
      <h3>My Official Tailgates</h3>
      <div class="well">
        <dl>
          <% @user.teams.each do |aTeam|%>
            <dt><%= aTeam.sport.name %></dt>
            <dd><%= link_to aTeam.name, team_path(aTeam)%></dd>
          <% end %>
        </dl>      
      </div>
      <a href="#myAddTeamModal" data-toggle="modal">Add Team</a>
      <h3>My Team's Local Official Watch Sites</h3>
      <div class="well">
        <dl>
          <% @localTeamWatchSites.each do |aWatchSite|%>
            <dt><%= aWatchSite.team.name %></dt>
            <dd><%= link_to aWatchSite.venue.name, venue_path(aWatchSite.venue)%></dd>
          <% end %>
        </dl>      
      </div>
    </div>
    <div class="span4">
      <h3>My Local Tailgates</h3>
      <div class="well">
        <dl>
          <% @localTailgateVenues.each do |aTailgateVenue|%>
            <dt><%= aTailgateVenue.tailgate.name %> - <%= aTailgateVenue.tailgate.team.name %></dt>
            <dd><%= link_to aTailgateVenue.venue.name, venue_path(aTailgateVenue.venue)%></dd>
          <% end %>
        </dl>      
      </div>
    </div>
    <div class="span4">
      <h3>My Trending Tailgates</h3>
      <div class="well">
        <dl>
          <% @localWatchSites.each do |aWatchSite|%>
            <dt><%= aWatchSite.team.name %></dt>
            <dd><%= link_to aWatchSite.venue.name, venue_path(aWatchSite.venue)%></dd>
          <% end %>
        </dl>      
      </div>
    </div>
  </div>
</div>


