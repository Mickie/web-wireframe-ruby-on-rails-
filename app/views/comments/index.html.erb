<h1>Listing comments</h1>

<table>
  <tr>
    <th>Content</th>
    <th>User</th>
    <th>Post</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @comments.each do |comment| %>
  <tr>
    <td><%= comment.content %></td>
    <td><%= comment.user %></td>
    <td><%= comment.post %></td>
    <td><%= link_to 'Show', tailgate_post_comment_path(comment.post.tailgate, comment.post, comment) %></td>
    <td><%= link_to 'Edit', edit_tailgate_post_comment_path(comment.post.tailgate, comment.post, comment) %></td>
    <td><%= link_to 'Destroy', [comment.post.tailgate, comment.post, comment], data: { confirm: "Are you sure?" }, method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Comment', new_tailgate_post_comment_path(@post.tailgate, @post) %>
