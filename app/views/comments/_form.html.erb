<div class="comment_form">
  <%= form_for([post.tailgate, post, comment], remote:true) do |f| %>
    <% if comment.errors.any? %>
      <div class="error_explanation">
        <h4><%= pluralize(comment.errors.count, "error") %> prohibited this comment from being saved:</h4>
  
        <ul>
        <% comment.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
  
    <%= f.text_field :content, placeholder:"Leave a comment...", class:"comment_input", required: true %>
    <%= f.submit "Add Comment", class:"comment_submit" %>
  <% end %>
</div>
