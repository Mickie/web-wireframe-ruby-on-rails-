<div class="row-fluid">
  <div class="span12">
    <%= @team.sport.name %>
    &gt; <%= @team.league.name %>
    <% if @team.division %>
    &gt; <%= @team.division.name %>
    <% end %>
    <% if @team.conference %>
    &gt; <%= @team.conference.name  %>
    <% end %>
  </div>
</div>
<div class="row-fluid">
  <div class="span12">
    <%= teamLogo(@team, :large) %>
    <h1><%= @team.name %></h1>
  </div>
</div>
<div class="row-fluid">
  <div class="span12">
    <b>Location:</b>
    <%= @team.location.one_line_address %>
  </div>
</div>

<div class="row-fluid">
  <div class="span6">
    <h3>Local Official Watch Sites</h3>
    <% @localTeamWatchSites.each do |aWatchSite| %>
    <div class="row-fluid">
      <div class="span12">
        <%= aWatchSite.name && aWatchSite.name.length > 0 ? aWatchSite.name : aWatchSite.venue.name %> : <%= aWatchSite.venue.location.one_line_address %>
      </div>
    </div>
    <% end %>
  </div>
  <div class="span6">
    <h3>Social</h3>
    <% if @team.social_info %>
    <div class="row-fluid">
      <div class="span12">
        <b>Twitter name:</b>
        <%= @team.social_info.twitter_name %>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span12">
        <b>Facebook page url:</b>
        <%= @team.social_info.facebook_page_url %>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span12">
        <b>Web url:</b>
        <%= @team.social_info.web_url %>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span12">
        <b>YouTube channel:</b>
        <%= @team.social_info.youtube_url %>
      </div>
    </div>
    <% end %>
    <% if @team.affiliation %>
    <div class="row-fluid">
      <div class="span12">
        <b>Affiliation:</b>
        <%= @team.affiliation.name %>
      </div>
    </div>
    <% end %>
  </div>
</div>

<% if @team.social_info.hash_tags %>
<div class="row-fluid">
  <div class="span12">
    
    <div id="myTweetModal" class="modal hide fade" style="display: none;">
      <div class="modal-header">
        <a class="close" data-dismiss="modal">×</a>
        <h3>Personalize your tweet:</h3>
      </div>
      <div class="modal-body">
        <textarea class="input-xlarge" id="tweetText" rows="3"></textarea>
      </div>
      <div class="modal-footer">
        <a id="sendTweetButton" href="#" class="btn" data-dismiss="modal">Send</a>
      </div>
    </div>
          
    <div class="controls" id="tweetControls">
      <div class="input-append">
        <textarea class="input-xlarge span11" rows="1"><%= raw @team.social_info.hash_tags %></textarea>
        <div class="btn-group">
          <button href="#" class="btn btn-primary quickTweetButton">Update Twitter Status</button>
          <button class="btn dropdown-toggle btn-primary" data-toggle="dropdown">
            <span class="caret"></span>
          </button>
          <ul class="dropdown-menu">
            <li><strong>Booyah!!</strong></li>
            <li><a href="#" data="dunk">Monster Dunk!</a></li>
            <li><a href="#" data="niceShot">Swoosh!</a></li>
            <li><a href="#" data="stickIt">In your face!</a></li>
            <li><a href="#" data="goDefense">Defense!</a></li>
            <li><a href="#" data="goOffense">Offense!</a></li>
            <li><a href="#" data="pretty">So Pretty!</a></li>
            <li class="divider"></li>
            <li><strong>What!?!?</strong></li>
            <li><a href="#" data="noDefense">What Defense?</a></li>
            <li><a href="#" data="foul">Foul!</a></li>
            <li><a href="#" data="kiddingMe">You kidding?</a></li>
            <li><a href="#" data="ouch">Ouch!</a></li>
            <li><a href="#" data="noOffense">What Offense?</a></li>
            <li><a href="#" data="blindRef">Ref's Blind!</a></li>
          </ul>         
        </div>
      </div>
    </div>    
    
    
    <div id="tweetSuccessAlert" class='alert alert-info fade in' style='display:none'>
      <a class='close' data-dismiss='alert' href='#'>×</a><p><strong>Success!</strong> Your status was updated</p>
    </div>
    
    <div id="tweetHolder">
      <div id="newTweets" class='alert alert-info fade in' style='display:none'>
        <a class='close' data-dismiss='alert' href='#'>×</a>
        <p>
          <strong>5</strong> new Tweets!
        </p>
      </div>
      <div id="tweets">
        <div id="template" class="tweet well">
          <img class="twitterAvatar" width="48px" height="48px">
          <span class="twitterName"></span>: 
          <span class="twitterText"></span>
          <div class="tweetMenu">
            <div class="timestamp"></div>
            <a id="reply"><%= image_tag("reply.png") %>Reply</a> |
            <a id="retweet"><%= image_tag("retweet.png") %>Retweet</a> |
            <a id="favorite"><%= image_tag("favorite.png") %>Favorite</a>
          </div>
          <div class="alert alert-info fade in" style="display:none">
            <a class="close" data-dismiss="alert" href="#">x</a>
            <p><strong>Success!</strong></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script language="JavaScript">
  var myTwitterView;
  $(function()
  {
    myTwitterView = new TwitterView(<%= raw @team.social_info.hash_tags.split(" ") %>, 
                                    20,
                                    "tweets",
                                    "newTweets",
                                    "tweetControls",
                                    <%= @current_user.isConnectedToTwitter? %>,
                                    "myTwitterView");
    myTwitterView.startLoadingTweets();
  })
</script>
<% end %>

