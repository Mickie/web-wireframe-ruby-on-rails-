<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @team.name %>
</p>

<% if @team.slug %>
  <img src="<%= logosPath + @team.slug + "_l.gif" %>"></img>
<% end %>

<p>
  <b>Sport:</b>
  <%= @team.sport.name %>
</p>

<p>
  <b>League:</b>
  <%= @team.league.name %>
</p>

<% if @team.division %>
  <p>
    <b>Division:</b>
    <%= @team.division.name %>
  </p>
<% end %>

<% if @team.conference %>
  <p>
    <b>Conference:</b>
    <%= @team.conference.name %>
  </p>
<% end %>

<p>
  <b>Location:</b>
  <%= @team.location.name %>
</p>

<% if @team.social_info %>
  <p>
    <b>Twitter name:</b>
    <%= @team.social_info.twitter_name %>
  </p>
  
  <p>
    <b>Hash Tags:</b>
    <%= @team.social_info.hash_tags %>
  </p>
  
  <p>
    <b>Facebook page url:</b>
    <%= @team.social_info.facebook_page_url %>
  </p>
  
  <p>
    <b>Web url:</b>
    <%= @team.social_info.web_url %>
  </p>
<% end %>

<p>
  <b>Affiliation:</b>
  <% if @team.affiliation %>
    <%= @team.affiliation.name %>
  <% else %>
    None
  <% end %>
</p>

<%= link_to 'Edit', edit_team_path(@team) %> |
<%= link_to 'New', new_team_path %> |
<%= link_to 'Back', teams_path %>
