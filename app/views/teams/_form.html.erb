<%= form_for(@team) do |f| %>
  <% if @team.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@team.errors.count, "error") %> prohibited this team from being saved:</h2>

      <ul>
      <% @team.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  
  <%= render :partial => 'partials/social_info', :locals => { :f => f } %>
  
  <div class="field">
    <%= f.label :sport %><br />
    <%= f.select(:sport_id, options_for_select(Sport.all.collect {|p| [ p.name, p.id ] } )) %>
  </div>

  <div class="field">
    <%= f.label :league %><br />
    <%= f.select(:league_id, options_for_select(League.all.collect {|p| [ p.name, p.id ] } )) %>
  </div>
  
  <div class="field">
    <%= f.label :division %><br />
    <%= f.select(:division_id, options_for_select(Division.all.collect {|p| [ p.name, p.id ] } )) %>
  </div>
  
  <div class="field">
    <%= f.label :conference %><br />
    <%= f.select(:conference_id, options_for_select(Conference.all.collect {|p| [ p.name, p.id ] } )) %>
  </div>

  <div class="field">
    <%= f.label :affiliation %><br />
    <%= f.select(:affiliation_id, options_for_select(Affiliation.all.collect {|p| [ p.name, p.id ] } )) %>
  </div>

  <%= render :partial => 'partials/location', :locals => { :f => f } %>

  <div class="actions">
    <%= f.submit "Save", id:"commit" %>
  </div>

<% end %>
