<h2>Sign in to FANZO</h2>

<%= render "devise/facebook_twitter_logins" %>

<h3>Or with your FANZO Account:</h3>

<div class="well">
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <div>
      <%= f.label :email %>
      <%= f.email_field :email %>
      </div>
  
    <div>
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>
  
    <% if devise_mapping.rememberable? -%>
      <div>
        <label class="checkbox"> <%= f.check_box :remember_me %> Remember Me</label>
      </div>
    <% end -%>
  
    <div><br/><%= f.submit "Sign in and join the fun >>", id:'commit', class:'btn btn-large btn-primary' %></div>
  <% end %>
</div>

<%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
<%= link_to "Need an account? Sign up!", new_registration_path(resource_name) %>
