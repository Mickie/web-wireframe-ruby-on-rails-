<% if session["devise.twitter_data"] %>
  <%= render "twitter_authed_new_user" %>
<% elsif session["devise.instagram_data"] %>
  <%= render "instagram_authed_new_user" %>
<% else %>
  <div class="row-fluid">
    <div class="span12">
      <h1>Register with Fanzo</h1>
      <h3>To continue, login with your Facebook account</h3>
      <%= render "partials/buttons/facebook_login_button" %>
    </div>
  </div>
  
  <% if !Rails.env.production? %>
    <%= form_for(resource, 
                 as: resource_name, 
                 url: registration_path(resource_name)
                 ) do |f| %>
      <%= f.label :email %>
      <%= f.email_field :email, placeholder:"superfan@sports.com" %>
      <%= f.label :password %>
      <%= f.password_field :password %>
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation %>
      <%= f.submit "Create Account & Login >>", id:'commit' %>
    <% end %>
  <% end %>
  
<% end %>
