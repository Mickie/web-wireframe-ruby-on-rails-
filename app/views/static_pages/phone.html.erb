<% aUserSignedInFlag = user_signed_in? %>

<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Fanzo - Where Fans Rule!</title>
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,600,700' rel='stylesheet' type='text/css'>
    <%= stylesheet_link_tag    "phone", :media => "all" %>
    <%= javascript_include_tag "phone" %>
    <%= csrf_meta_tags %>
    <%= render 'layouts/shim' %>
    <%= favicon_link_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=0">
    <meta name="apple-mobile-web-app-capable" content="yes" />
  </head>
  <body>
    <div id="fb-root"></div>
    <div id="phoneUI">
      <div id="phoneLeftNav" class="hide">
        <div class="leftNavContent">
          <div class="login" 
               onclick="myPhoneNavigator.showLogin()" 
               style="display:<%= aUserSignedInFlag ? "none" : "block" -%>;">
            <div class="navIcon">
              <%= image_tag( "fanzo-logo-square.gif", size:"32x32", alt:"Fanzo.me") %>
            </div>
            <div class="navText">Log in with Facebook</div>
          </div>
          <div class="userProfile"
               style="display:<%= aUserSignedInFlag ? "block" : "none" -%>;">
            <div class="navIcon">
              <img id="leftNavUserPic" src="<%= aUserSignedInFlag ? current_user.image : ""-%>" width="32" height="32"/>
            </div>
            <div id="leftNavUserName" class="navText">
              <%= aUserSignedInFlag ? current_user.full_name : "" %>
            </div>
          </div>
          <div class="allFanzones" onclick="myPhoneNavigator.showAllFanzones()">
            <div class="navIcon"><i></i></div>
            <div class="navText">All Fanzones</div>
          </div>
          <div class="myFanzones" onclick="myPhoneNavigator.showMyFanzones()">
            <div class="navIcon"><i></i></div>
            <div class="navText">My Fanzones</div>
          </div>
        </div>
      </div>
      <div id="phoneTileViewport" class="phoneViewport">
        <div id="phoneTileTopNav" class="phoneTopNav">
          <button id="showLeftNavButton" class="fanzoButton">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <h1 class="phoneTitle">Fanzo</h1>
        </div>
        <div id="phoneTileContent" class="phoneContent">
          <div id="frameContent">
            <%= render partial: "partials/all_fanzone_tiles", locals:{ aUserSignedInFlag: user_signed_in? } %>
          </div>
        </div>
      </div>
      <div id="phoneFanzoneViewport" class="phoneViewport">
        <div id="phoneFanzoneTopNav" class="phoneTopNav">
          <button id="backToTilesButton" class="fanzoButton">
            back
          </button>
          <h1 class="phoneTitle">Fanzo</h1>
          <button id="followButton" class="fanzoButton">
            follow
          </button>
        </div>
        <div id="phoneFanzoneLoading" class="hide">
          <div>
            <img src='/assets/loading.gif' />
            <h1>Loading...</h1>
          </div>
        </div>
        <div id="phoneFanzoneContent" class="phoneContent">
          <div id="phoneFanzoneBanner">
            <div class="banner_content">
              <div class="team_logo">
                <img />
              </div>
              <div class="fanzone_details">
                <div class="official">
                  <span>Official</span>
                </div>
                <h1 class="fanzoneName"></h1>
                <p class="description"></p>
                <div class="owner">
                  <div class="profile_pic">
                    <img />
                  </div>
                  <div class="owner_details">
                    <p>Created by <span class="owner_name"></span></p>
                    <p>
                      Updated: 
                      <span class="timestamp" title="" ></span>
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </div>
          
          <div class="postsAndComments">
            <% @tailgate = Tailgate.first %>
            <% @post = @tailgate.posts.build %>
            <div id="postForm">
              <h4>Fanzone Posts</h4>
              <div class="profile_pic">
                <% if user_signed_in? %>
                  <%= link_to image_tag( current_user.image, size:"32x32" ), user_path(current_user) %>
                <% end %>
              </div>
              <div class="post_fields">
                <%= render "/posts/form" %>
              </div>
            </div>
            <div id="phoneFanzoneTemplates" class="hide">
              <div id="postTemplate">
                <%= render partial: "partials/posts_and_comments/post_votes", locals: {aPost: @tailgate.posts.first, aPostVote: nil }%>
                <%= render partial: "partials/posts_and_comments/post", locals: {aPost: @tailgate.posts.first}%>
              </div>
              <div id="postVideoTemplate">
                <div class="post_video" id="">
                  <div class="playButtonBackground"><div class='playButton'></div></div>
                  <img src="" width="200" />
                </div>
              </div>
              <div id="postImageTemplate">
                <div class="post_image">
                  <img src="" width="200" />
                </div>
              </div>
            </div>

            <div id="posts">
              
            </div>
            
          </div>

        </div>
        <div id="phoneFanzoneFooterNav">
          <nav>
            <ul>
              <li>Home</li>
              <li>Social</li>
              <li>Media</li>
              <li>Map</li>
            </ul>
          </nav>
        </div>
      </div>
    </div>
    <% if @device %>
      <script type="text/javascript" src="/cordova-2.0.0.js"></script>
    <% end %>
    
    <script type="text/javascript" src="https://apis.google.com/js/plusone.js">
      {"parsetags": "explicit"}
    </script>
    <script type="text/javascript" src="//assets.pinterest.com/js/pinit.js"></script>
    <script type="text/javascript">
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', '<%= ENV["GOOGLE_ANALYTICS_ACCOUNT"] %>']);
      _gaq.push(['_setDomainName', '<%= ENV["FANZO_DOMAIN"] %>']);
      _gaq.push(['_setCustomVar', 1, 'first_impression_date', '<%= Time.now.strftime("%Y%m%d") %>', 1]);
      _gaq.push(['_setCustomVar', 2, 'logged_in', '<%= current_user.blank? ? "false" : "true" %>', 2]);
      _gaq.push(['_setCustomVar', 3, 'mobile', 'true', 2]);
      _gaq.push(['_trackPageview']);
      _gaq.push(['_trackPageLoadTime']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();
    </script>
  </body>
</html>
